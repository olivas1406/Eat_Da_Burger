
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="bigText">Eat Da Burger</h1>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-6 burgers">
            <h3 class="smallText">Burgers Available</h3>
             <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                    <div class="showBurger">
                        {{this.id}}. {{this.burger_name}}
						<form action="/updateOne/{{this.id}}" method="POST">
							<input type="hidden" name="devoured" value="1">
							<button type="submit" class="btn btn-success">Om Nom Nom</button>
						</form>
						<!--
                            <form action="/updateOne/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="1">
                                <button type="submit" class="btn btn-success">Om Nom Nom</button>
                            </form>
							-->
                    </div>
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-6 devoured">
            <h3 class="smallText">Burgers Devoured</h3>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                {{this.id}}. {{this.burger_name}}
                <form action="/updateOne/{{this.id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
              {{/if}}
              {{/each}}
            </ul>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-12 addBurger">
            <h3 class="smallText">Add a Burger</h3>
            <form class="create-update-form" action="/insertOne" method="POST">
				<div class="form-group">
					<textarea type="text" name="burger_name"></textarea><br>
					<button class="btn btn-warning" type="submit">Add Burger</button>
				</div>
			</form>
        </div>
    </div>
    



